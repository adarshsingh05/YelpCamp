<% layout ('layouts/boilerplate') %>

    <h1>All Campground List</h1>
 
        <% for(let campground of campgrounds) { %> <!-- Corrected spacing here -->
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%=campground.image%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title" >  <%= campground.title%></h5>
                            <p class="card-text"><%=campground.description%></p>
                            <p class="card-text">
                                <small class="text-dark"><%=campground.location%></small>
                                </p>
                                <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">
                                    View <%= campground.title%>

                                </a>
                        </div>
                    </div>
                </div>

            </div>
        <% } %>
 
    <footer>
        <a href="/campgrounds/new">Add new CG</a>
    </footer>

